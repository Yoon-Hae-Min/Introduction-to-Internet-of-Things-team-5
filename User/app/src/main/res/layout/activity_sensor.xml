<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorActivity">
    <!--  Navigation UI  -->
    <TextView
        android:id="@+id/tv_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:text="목적지 : AI-414호"
        android:textStyle="bold"
        android:textSize="28sp"/>
    <ImageView
        android:id="@+id/img_arrow"
        android:layout_width="200dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_destination"
        app:layout_constraintLeft_toLeftOf="@+id/tv_destination"
        app:layout_constraintRight_toRightOf="@+id/tv_destination"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_arrow"
        />
    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_distance"
        app:layout_constraintLeft_toLeftOf="@+id/tv_distance"
        android:layout_marginBottom="10dp"
        android:text="현재 속도 : "
        android:textSize="20sp"/>
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="50dp"
        android:text="남은 거리 : "
        android:textSize="20sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>