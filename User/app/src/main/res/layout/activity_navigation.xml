<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NavigationActivity"
    android:background="@color/white">
    <!--  Navigation Layout  -->
    <TextView
        android:id="@+id/tv_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination :"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="60dp"
        />
    <TextView
        android:id="@+id/tv_destination_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="dummy"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/tv_destination"
        app:layout_constraintBottom_toBottomOf="@+id/tv_destination"
        app:layout_constraintLeft_toRightOf="@+id/tv_destination"
        android:layout_marginLeft="10dp"
        />
    <ImageView
        android:id="@+id/img_navi_arrow"
        android:layout_width="80dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_destination"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_navigation_arrow"
        />
    <TextView
        android:id="@+id/tv_speed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Speed :"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/img_navi_arrow"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="110dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/tv_speed_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="4km/h"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/tv_speed"
        app:layout_constraintBottom_toBottomOf="@+id/tv_speed"
        app:layout_constraintLeft_toRightOf="@+id/tv_speed"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:id="@+id/tv_distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remaining distance :"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/tv_speed"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        />
    <TextView
        android:id="@+id/tv_distance_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100m"
        android:textSize="25sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/tv_distance"
        app:layout_constraintBottom_toBottomOf="@+id/tv_distance"
        app:layout_constraintLeft_toRightOf="@+id/tv_distance"
        android:layout_marginLeft="10dp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>